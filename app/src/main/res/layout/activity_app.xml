<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".View.AppActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etText1"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edittext_background"
            android:hint="@string/app_string_uno"
            android:paddingStart="30dp"
            android:singleLine="true"
            android:maxLength="16"
            android:textColor="@color/white1"
            android:textColorHint="@color/text_hint"
            android:textSize="23dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etText2"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edittext_background"
            android:hint="@string/app_string_dos"
            android:paddingStart="30dp"
            android:singleLine="true"
            android:maxLength="16"
            android:textColor="@color/white1"
            android:textColorHint="@color/text_hint"
            android:textSize="23dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnComparar"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button"
            android:text="@string/text_button"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                tools:src="@drawable/exclamation_8" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:textColor="@color/textResult"
                android:textSize="29sp"
                android:textStyle="bold"
                tools:text="DISTINTOS" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>